
<div class="container">   <!-- signup.1 -->
<div class="col-sm-6 col-sm-offset-3">    <!-- signup.1.1 -->
    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- LOGIN FORM -->
    <form action="/user/signup" method="post">
        <div class="form-group">    <!-- signup.1.1.1 -->
            <label >Email</label>
            <input type="email" class="form-control" name="email" pattern=".{8,}" required>
        </div>    <!-- /signup.1.1.1 -->
        <div class="form-group">    <!-- signup.1.1.2 -->
            <label class=""  for="password">Password</label>
            <input id="password" type="password" class="form-control" name="password" pattern=".{8,}" required>
        </div>    <!-- /signup.1.1.2 -->

        <div class="form-group">    <!-- signup.1.1.3 -->
            <label>Confirm Password</label>
            <input id="confirm_password" type="password" class="form-control" name="confirm_password">
        </div>    <!-- /signup.1.1.3 -->
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/">Login</a></p>

</div>    <!-- /signup.1.1 -->
</div>    <!-- /signup.1 -->
<script>
var password = document.getElementById("password")
  , confirm_password = document.getElementById("confirm_password");

function validatePassword(){
  if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match");
  } else {
    confirm_password.setCustomValidity('');
  }
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>

