{{#if access.edit}}
<form id=formEdit></form>{{!--this is for the edit button both button sit outside the forms so they do not conflict --}}
<form id=formCopy><input type="hidden" name="wasCopy" value="{{wasCopy}}"></form>
<input accesskey="x" title="Press Alt x to Edit" input type='submit' class='btn btn-warning btn-xs' formaction='/equipment/edit-{{equipSN}}' form="formEdit" formmethod="get" value='E'>
<input accesskey="c" title="Press Alt c to Copy" input type='submit' class='btn btn-info btn-xs' formaction='/equipment/edit~copy-{{equipSN}}' form="formCopy" formmethod="get" value='C'>
{{/if}} 