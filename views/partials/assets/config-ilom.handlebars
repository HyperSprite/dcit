{{#if ilom}}
  <div>
    {{#each systemPorts}}
      {{#if sysPortisNetMgmt}}
      <h5>Ilom Config</h5>
        <div class="span9" style="border: 2px solid grey">
          <p>
          set /SP hostname={{../../systemName}}-{{sysPortName}}<br>
          cd /SP/network<br>
          set pendingipdiscovery=static<br>
          set pendingipaddress={{sysPortAddress}}<br>
          set pendingipnetmask={{netMask}}<br>
          set pendingipgateway={{dcNet.dcNetGateway}}<br>
          set commitpending=true<br>
          set /SP/services/ssh state=enabled<br>
          set /SP/services/https servicestate=enabled port=443<br>
          </p>
        </div>   
      {{/if}}
    {{/each}}
  </div>
{{/if}}