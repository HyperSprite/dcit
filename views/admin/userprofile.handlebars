<div>
<h4>User Administration</h4>
<div class="formContainer">
<form id="userprofileForm" class="form-horizontal userprofileForm" role="form" action="/admin/userprofileupdate" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <input type="hidden" name="id" value="{{id}}">

        <div class="form-group">
            <label for="field-email" class="col-sm-2 control-label" >Email</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="locEmail" name="locEmail"  value="{{locEmail}}">
            </div>
        </div>
        <div class="form-group">
            <label for="field-name" class="col-sm-2 control-label" >Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="locName" name="locName"  value="{{locName}}">
            </div>
        </div>
        <div class="form-group">
            <label for="field-phone" class="col-sm-2 control-label" >Phone</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="locPhone" name="locPhone"  value="{{locPhone}}">
            </div>
        </div>
        <div class="form-group">
            <label for="field-access" class="col-sm-2 control-label" >access</label>
            <div class="col-sm-4">
                <select class="form-control" id="usrAccess" name="usrAccess">
                   <option "{{usrAccess}}" >{{usrAccess}}</option>
                   <option "1">1</option>
                   <option "2">2</option>
                   <option "3">3</option>
                   <option "4">4</option>
                   <option "5">5</option>
                </select>
                <ol type="1">
                  <li>Awaiting Aprval (default for new user)</li>
                  <li>Read Only</li>
                  <li>Edit</li>
                  <li>Edit and Delete</li>
                  <li>Full Access</li>
                </ol>

            </div>
        </div>
     <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-primary btn-xs" value='Submit'>Submit</button>
                <button type="reset" class="btn btn-warning btn-xs"value="Reset">Reset</button>
                <input form="formCancel" type='submit' class='btn btn-default btn-xs' formmethod="get" novalidate value='Cancel' formaction='/admin/useradmin'>
                <button type="submit" class="btn btn-danger btn-xs" form="deleteform">Delete</button>
            </div>
        </div>
     </form>
     <form id="formCancel"></form> 
      
     <form id="deleteform" action="/admin/userdelete" method="POST" onsubmit="return confirm('Are you sure you want to delete {{email}}. This can not be undone!')">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <input type="hidden" name="id" value="{{id}}">
        <input type="hidden" name="email" value="{{email}}">
    </form>

</div>
</div>